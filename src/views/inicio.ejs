<%- include('./partials/header'); %>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/style_inicio.css">
    <title>Inicio</title>
</head>
<body>
    <div class="pagina-inicio">
        <h1>Bienvenido al Sistema de EduSoft</h1>

        <% if (userRol === 'Docente') { %>
            <h2>Panel de Docente</h2>

            <h3>Asignaturas Asignadas:</h3>
            <% if (asignaturas.length > 0) { %>
                <ul>
                    <% asignaturas.forEach(asignatura => { %>
                        <li><%= asignatura.nombre %></li>
                    <% }); %>
                </ul>
            <% } else { %>
                <p>No tienes asignaturas asignadas.</p>
            <% } %>

            <h3>Comunicaciones:</h3>
            <% if (comunicaciones.length > 0) { %>
                <ul>
                    <% comunicaciones.forEach(comunicacion => { %>
                        <li><strong><%= comunicacion.titulo %></strong> - <%= comunicacion.fecha %><br>
                            <%= comunicacion.descripcion %>
                        </li>
                    <% }); %>
                </ul>
            <% } else { %>
                <p>No tienes comunicaciones pendientes.</p>
            <% } %>
        <% } %>
    </div>
</body>
</html>

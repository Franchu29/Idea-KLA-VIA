<%- include('./partials/header'); %>
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crear Evento</title>
    <link rel="stylesheet" href="/styles/style_formulario.css">
</head>
<body>
    <div class="form-container">
        <h1>Crear Evento</h1>
        <form action="/events/create_event" method="POST" enctype="multipart/form-data">
            <label for="nombre">Nombre:</label>
            <input type="text" id="nombre" name="nombre" required>

            <label for="descripcion">Descripción:</label>
            <input type="text" id="descripcion" name="descripcion" required>

            <label for="fecha">Fecha:</label>
            <input type="date" id="fecha" name="fecha" required>

            <label for="lugar">Lugar:</label>
            <input type="text" id="lugar" name="lugar" required>

            <label for="categorias">Categorías:</label>
            <div class="checkbox-group" id="categorias">
                <% categorias.forEach(categoria => { %>
                    <label><input type="checkbox" name="categorias" value="<%= categoria.id %>"> <%= categoria.nombre %></label>
                <% }) %>
            </div>

            <label for="distancias">Distancias:</label>
            <div class="checkbox-group" id="distancias">
                <% distancias.forEach(distancia => { %>
                    <label><input type="checkbox" name="distancias" value="<%= distancia.id %>"> <%= distancia.nombre %></label>
                <% }) %>
            </div>

            <label for="imagen">Imagen del Evento:</label>
            <input type="file" id="imagen" name="imagen" accept="image/*">

            <button type="submit">Crear Evento</button>
        </form>
    </div>
</body>
</html>

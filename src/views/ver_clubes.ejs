<%- include('./partials/header'); %>
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Clubes</title>
    <style>
        /* Estilos básicos para las tarjetas */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            color: #333;
            display: flex;
            flex-direction: column;
            align-items: center;
            margin: 0;
            padding: 0;
        }

        h1 {
            color: #333;
            margin-top: 20px;
        }

        .club-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
            padding: 20px;
        }

        .club-card {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            width: 300px;
            transition: transform 0.2s ease;
        }

        .club-card:hover {
            transform: scale(1.03);
        }

        .club-card-header {
            padding: 16px;
            background-color: #333;
            color: #fff;
            font-weight: bold;
        }

        .club-card-body {
            padding: 16px;
        }

        .club-card-body p {
            margin: 8px 0;
        }

        .club-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
            background-color: #eee;
        }

        .club-card-footer {
            display: flex;
            justify-content: space-between;
            padding: 16px;
            border-top: 1px solid #eee;
        }

        .button {
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 14px;
            text-align: center;
            text-decoration: none;
            color: #fff;
        }

        .button-edit {
            background-color: #4CAF50;
        }

        .button-delete {
            background-color: #f44336;
        }

        .button-inspect {
            background-color: #2196F3;
        }
    </style>
</head>
<body>
    <h1>Lista de Clubes</h1>

    <% if (clubes.length > 0) { %>
        <div class="club-container">
            <% clubes.forEach(club => { %>
                <div class="club-card">
                    <!-- Imagen del club (puedes agregar una imagen si tienes alguna columna en la tabla) -->
                    <img src="/uploads/images_club/club_<%= club.id %>.jpg" alt="Imagen de <%= club.nombre %>" class="club-image">
                    
                    <div class="club-card-header">
                        <%= club.nombre %>
                    </div>
                    <div class="club-card-footer">
                        <form action="/club/edit_club/<%= club.id %>" method="get" style="margin-right: 8px;">
                            <button type="submit" class="button button-edit">Editar</button>
                        </form>
                        <form action="/club/delete_club/<%= club.id %>" method="post" onsubmit="return confirm('¿Estás seguro que quieres eliminar este club?');" style="margin-right: 8px;">
                            <button type="submit" class="button button-delete">Eliminar</button>
                        </form>                        
                        <form action="/club/inspeccionar_club/<%= club.id %>" method="get">
                            <button type="submit" class="button button-inspect">Inspeccionar</button>
                        </form>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <p>No hay clubes registrados.</p>
    <% } %>

</body>
</html>

<%- include('./partials/header'); %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cronómetro</title>
    <style>
        #cronometro {
            font-size: 2em;
            margin-bottom: 20px;
        }
        .btn {
            padding: 10px 20px;
            font-size: 1.2em;
            margin: 5px;
        }
        #corredorInput {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <h1>Cronómetro para el Evento <%= id %></h1>
    
    <div id="cronometro">00:00:00</div>
    
    <!-- Botones para controlar el cronómetro -->
    <button id="startButton" class="btn">Iniciar</button>
    <button id="stopButton" class="btn" disabled>Detener</button>

    <!-- Formulario para registrar número de corredores -->
    <div id="corredorInput">
        <form id="registrarCorredorForm" action="/cronometro/registrar" method="POST">
            <label for="numeroCorredor">Número del Corredor:</label>
            <input type="number" id="numeroCorredor" name="numeroCorredor" min="1" required>
            
            <!-- Campo oculto para el eventoId -->
            <input type="hidden" id="eventoId" name="eventoId" value="<%= id %>">
            <input type="hidden" id="tiempoCorredor" name="tiempo">
            
            <button type="submit" class="btn">Registrar</button>
        </form>
    </div>
    
    <script>
        let timer;
        let startTime;
        let running = false;
        let elapsedTime = 0;

        const cronometro = document.getElementById('cronometro');
        const startButton = document.getElementById('startButton');
        const stopButton = document.getElementById('stopButton');
        const numeroCorredorInput = document.getElementById('numeroCorredor');
        const registrarCorredorForm = document.getElementById('registrarCorredorForm');
        const tiempoCorredorInput = document.getElementById('tiempoCorredor');

        // Función para actualizar el cronómetro
        function actualizarCronometro() {
            const now = Date.now();
            const diff = now - startTime + elapsedTime;
            const hours = Math.floor(diff / (1000 * 60 * 60)).toString().padStart(2, '0');
            const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60)).toString().padStart(2, '0');
            const seconds = Math.floor((diff % (1000 * 60)) / 1000).toString().padStart(2, '0');
            cronometro.textContent = `${hours}:${minutes}:${seconds}`;
        }

        // Función para iniciar el cronómetro
        startButton.addEventListener('click', function() {
            if (!running) {
                startTime = Date.now();
                timer = setInterval(actualizarCronometro, 1000);
                startButton.disabled = true;
                stopButton.disabled = false;
                running = true;
            }
        });

        // Función para detener el cronómetro
        stopButton.addEventListener('click', function() {
            if (running) {
                clearInterval(timer);
                elapsedTime += Date.now() - startTime;
                startButton.disabled = false;
                stopButton.disabled = true;
                running = false;
            }
        });

        // Antes de enviar el formulario, capturar el tiempo actual del cronómetro
        registrarCorredorForm.addEventListener('submit', function(event) {
            event.preventDefault(); // Evitar la acción predeterminada del formulario

            // Calcular el tiempo en segundos del cronómetro
            const now = Date.now();
            const diff = now - startTime + elapsedTime;
            const tiempoEnSegundos = Math.floor(diff / 1000); // Convertir a segundos

            // Asignar el tiempo al input hidden
            tiempoCorredorInput.value = tiempoEnSegundos;

            // Enviar el formulario al servidor
            this.submit();
        });
    </script>
</body>
</html>

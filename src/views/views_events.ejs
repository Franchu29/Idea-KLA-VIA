<%- include('./partials/header'); %>
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Eventos</title>
    <style>
        /* Estilos básicos para las tarjetas */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            color: #333;
            display: flex;
            flex-direction: column;
            align-items: center;
            margin: 0;
            padding: 0;
        }

        h1 {
            color: #333;
            margin-top: 20px;
        }

        h2 {
            color: #555;
            margin-top: 40px;
        }

        .event-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
            padding: 20px;
        }

        .event-card {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            width: 300px;
            transition: transform 0.2s ease;
        }

        .event-card:hover {
            transform: scale(1.03);
        }

        .event-card-header {
            padding: 16px;
            background-color: #333;
            color: #fff;
            font-weight: bold;
        }

        .event-card-body {
            padding: 16px;
        }

        .event-card-body p {
            margin: 8px 0;
        }

        .event-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
            background-color: #eee;
        }

        .event-card-footer {
            display: flex;
            justify-content: space-between;
            padding: 16px;
            border-top: 1px solid #eee;
        }

        .button {
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 14px;
            text-align: center;
            text-decoration: none;
            color: #fff;
        }

        .button-edit {
            background-color: #4CAF50;
        }

        .button-delete {
            background-color: #f44336;
        }

        .button-inspect {
            background-color: #2196F3;
        }
    </style>
</head>
<body>
    <h1>Lista de Eventos</h1>

    <% if (Object.keys(groupedEvents).length > 0) { %>
        <% Object.keys(groupedEvents).sort((a, b) => b - a).forEach(year => { %>
            <h2>Eventos del Año: <%= year %></h2>
            <div class="event-container">
                <% groupedEvents[year].forEach(event => { %>
                    <div class="event-card">
                        <img src="/uploads/images_evento/evento_<%= event.id %>.jpg" alt="Imagen de <%= event.nombre %>" class="event-image">
                        
                        <div class="event-card-header">
                            <%= event.nombre %>
                        </div>
                        <div class="event-card-body">
                            <p><strong>Descripción:</strong> <%= event.descripcion %></p>
                            <p><strong>Fecha:</strong> <%= new Date(event.fecha).toLocaleDateString('es-ES', { timeZone: 'UTC' }) %></p>
                            <p><strong>Lugar:</strong> <%= event.lugar %></p>
                            <p><strong>Precio:</strong>
                                <% if (event.distancias.length > 0) { %>
                                    <% event.distancias.forEach((ed, index) => { %>
                                        <span><%= ed.distancia.nombre %>: $<%= ed.distancia.precio %></span>
                                        <% if (index < event.distancias.length - 1) { %>, <% } %>
                                    <% }); %>
                                <% } else { %>
                                    <span>No hay distancias</span>
                                <% } %>
                            </p>
                        </div>
                        <div class="event-card-footer">
                            <form action="/events/edit_event/<%= event.id %>" method="get" style="margin-right: 8px;">
                                <button type="submit" class="button button-edit">Editar</button>
                            </form>
                            <form action="/events/delete_event/<%= event.id %>" method="post" onsubmit="return confirm('¿Estás seguro que quieres eliminar este evento?');" style="margin-right: 8px;">
                                <button type="submit" class="button button-delete">Eliminar</button>
                            </form>
                            <form action="/events/inspeccionar_evento/<%= event.id %>" method="get">
                                <button type="submit" class="button button-inspect">Inspeccionar</button>
                            </form>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% }) %>
    <% } else { %>
        <p>No hay eventos registrados.</p>
    <% } %>

</body>
</html>

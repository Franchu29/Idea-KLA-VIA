<%- include('./partials/header'); %>  

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Participantes del Evento</title>
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="//cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" href="/styles/style_evento.css">
    <script>
        $(document).ready(function(){
            $('#tabla-corredores_carrera').DataTable();
        });
    </script>
</head>
<body>
    <h1>Participantes del Evento: <%= evento.nombre %></h1>
    
    <button id="btn-iniciar-carrera" onclick="window.location.href='/cronometro/cronometro/<%= evento.id %>'">Comenzar Carrera</button>

    <% if (mostrarBotonCortesia) { %>
        <button id="btn-anadir-participante" onclick="window.location.href='/events/participantes_cortesia/<%= evento.id %>'">Añadir Participante de Cortesía</button>
    <% } %>

    <% if (evento.resultados.length > 0) { %>
        <h2>Descargar Resultados</h2>
        <button id="btn-descargar-5k" onclick="window.location.href='/cronometro/descargar_pdf_5k/<%= evento.id %>'">Descargar Resultados 5K</button>
        <button id="btn-descargar-10k" onclick="window.location.href='/cronometro/descargar_pdf_10k/<%= evento.id %>'">Descargar Resultados 10K</button>
    <% } else { %>
        <p>No hay resultados disponibles para este evento.</p>
    <% } %>    
    
    <table id="tabla-corredores_carrera" class="w3-table-all w3-card-4">
        <thead>
          <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Edad</th>
            <th>Distancia</th>
            <th>Categoría</th>
            <th>N° Corredor</th>
          </tr>
        </thead>       
        <tbody>
            <% if (evento.inscripciones.length > 0) { %>
                <% evento.inscripciones.forEach(inscripcion => { %>
                    <tr>
                        <td><%= inscripcion.id %></td>
                        <td><%= inscripcion.usuario ? inscripcion.usuario.nombre : 'No disponible' %></td>
                        <td><%= inscripcion.usuario ? inscripcion.usuario.apellido : 'No disponible' %></td>
                        <td><%= inscripcion.usuario ? inscripcion.usuario.edad : 'No disponible' %></td>
                        <td><%= inscripcion.distancia ? inscripcion.distancia.nombre : 'No definida' %></td>
                        <td><%= inscripcion.categoria ? inscripcion.categoria.nombre : 'No definida' %></td>
                        <td><%= inscripcion.numeroCorredor || 'No disponible' %></td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="7">No hay participantes inscritos para este evento.</td>
                </tr>
            <% } %>
        </tbody>                           
    </table>    
</body>
</html>

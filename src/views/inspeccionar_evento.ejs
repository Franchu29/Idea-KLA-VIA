<%- include('./partials/header'); %>  

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Participantes del Evento</title>
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="//cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" href="/styles/style_evento.css">
    <script>
        $(document).ready(function() {
            $('#tabla-corredores_carrera').DataTable({
                stateSave: true
            });
        });
    </script>
</head>
<body>
    <h1>Evento <%= evento.nombre %> Fecha <%= evento.fecha %></h1>

    <% if (pronostico) { %>
        <div class="pronostico-clima">
            <h2>Pronóstico del clima en <%= pronostico.location.name %>:</h2>
            <% pronostico.forecast.forecastday.forEach(dia => { %>
                <div class="dia-pronostico">
                    <h3><%= dia.date %></h3>
                    <p>Máxima: <%= dia.day.maxtemp_c %>°C</p>
                    <p>Mínima: <%= dia.day.mintemp_c %>°C</p>
                    <p>Condición: <%= dia.day.condition.text %></p>
                    <img src="<%= dia.day.condition.icon %>" alt="Icono del clima">
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <p>No se pudo obtener el pronóstico del clima.</p>
    <% } %>
    
    <% if (mostrarBotonIniciarCarrera) { %>
        <button id="btn-iniciar-carrera" onclick="window.location.href='/cronometro/cronometro/<%= evento.id %>'">
            Comenzar Carrera
        </button>
    <% } %>

    <% if (mostrarBotonCortesia) { %>
        <button id="btn-anadir-participante" onclick="window.location.href='/events/participantes_cortesia/<%= evento.id %>'">
            Añadir Participante de Cortesía
        </button>
    <% } %>

    <% if (evento.resultados.length > 0) { %>
        <h2>Descargar Resultados</h2>
        <button id="btn-descargar-5k" onclick="window.location.href='/cronometro/descargar_pdf_5k/<%= evento.id %>'">
            Descargar Resultados 5K
        </button>
        <button id="btn-descargar-10k" onclick="window.location.href='/cronometro/descargar_pdf_10k/<%= evento.id %>'">
            Descargar Resultados 10K
        </button>
    <% } else { %>
        <p>No hay resultados disponibles para este evento.</p>
    <% } %>    
    
    <table id="tabla-corredores_carrera" class="w3-table-all w3-card-4">
        <thead>
          <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Edad</th>
            <th>Distancia</th>
            <th>Categoría</th>
            <th>N° Corredor</th>
            <th>Asistencia</th>
            <th>Botones</th>
          </tr>
        </thead>       
        <tbody>
            <% if (evento.inscripciones.length > 0) { %>
                <% evento.inscripciones.forEach(inscripcion => { %>
                    <tr>
                        <td><%= inscripcion.id %></td>
                        <td><%= inscripcion.usuario ? inscripcion.usuario.nombre : 'No disponible' %></td>
                        <td><%= inscripcion.usuario ? inscripcion.usuario.apellido : 'No disponible' %></td>
                        <td><%= inscripcion.usuario ? inscripcion.usuario.edad : 'No disponible' %></td>
                        <td><%= inscripcion.distancia ? inscripcion.distancia.nombre : 'No definida' %></td>
                        <td><%= inscripcion.categoria ? inscripcion.categoria.nombre : 'No definida' %></td>
                        <td><%= inscripcion.numeroCorredor || 'No disponible' %></td>
                        <td>
                            <% if (inscripcion.asistencia === true) { %>
                                <span style="color: green;">✅ Asistió</span>
                            <% } else if (inscripcion.asistencia === false) { %>
                                <span style="color: red;">❌ No Asistió</span>
                            <% } else { %>
                                <span style="color: gray;">Pendiente</span>
                            <% } %>
                        </td>
                        <td>
                            <!-- Botones para marcar asistencia -->
                            <form action="/events/actualizar_asistencia/<%= inscripcion.id %>" method="POST" class="form-asistencia">
                                <input type="hidden" name="asistencia" value="true">
                                <button type="submit" class="btn-asistio" style="background-color: #4CAF50; color: white; border: none; padding: 5px 10px; border-radius: 4px;">
                                    Marcar Asistió
                                </button>
                            </form>
                            <form action="/events/actualizar_asistencia/<%= inscripcion.id %>" method="POST" class="form-asistencia" style="margin-top: 5px;">
                                <input type="hidden" name="asistencia" value="false">
                                <button type="submit" class="btn-no-asistio" style="background-color: #f44336; color: white; border: none; padding: 5px 10px; border-radius: 4px;">
                                    Marcar No Asistió
                                </button>
                            </form>
                        </td>                   
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="9">No hay participantes inscritos para este evento.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</body>
</html>
